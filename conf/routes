# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# Home page
GET     /                       controllers.HomeController.index

# Tasks
GET     /tasks                  controllers.TaskController.index
POST    /tasks                  controllers.TaskController.create
POST    /tasks/:id/delete       controllers.TaskController.delete(id: String)
POST    /tasks/:id/edit         controllers.TaskController.edit(id: String)
POST    /tasks/:id/update       controllers.TaskController.update(id: String)

# Dashboard
GET     /dashboard              controllers.DashboardController.index


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

# API
# API
GET     /api/tasks              controllers.api.APITaskController.index
POST    /api/tasks             controllers.api.APITaskController.create
GET     /api/tasks/:id          controllers.api.APITaskController.show(id: String)
DELETE  /api/tasks/:id          controllers.api.APITaskController.delete(id: String)
